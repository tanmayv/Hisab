<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="13dp">

   <TextView android:id="@+id/lblCollect"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_toRightOf="@+id/txt1"
       android:layout_margin="3dp"
       android:layout_marginLeft="16dp"
       android:text="0" />

   <TextView
       android:id="@+id/txt1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_margin="3dp"
       android:layout_marginTop="16dp"
       android:text="Amount to  collect:" />
   
   <ListView android:id="@+id/listCollect"
       android:layout_below="@+id/txt1"
       android:layout_width="match_parent"
       android:layout_height="180dp"
       android:layout_margin="3dp"/>
   
   <TextView android:id="@+id/lblGive"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_toRightOf="@+id/txt2"
       android:layout_toEndOf="@+id/txt2"
       android:layout_margin="3dp"
       android:text="0" 
       android:layout_alignBaseline="@+id/txt2"/>

   <TextView
       android:id="@+id/txt2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:layout_alignBaseline="@+id/txt2"
       android:layout_below="@+id/listCollect"
       android:layout_centerHorizontal="true"
       android:layout_marginRight="3dp"
       android:layout_marginBottom="3dp"
       android:layout_marginLeft="3dp"
       android:layout_marginTop="13dp"
       android:text="Amount to  Give: " />
   
   <ListView android:id="@+id/listGive"
       android:layout_below="@+id/txt2"
       android:layout_width="match_parent"
       android:layout_height="180dp"
       android:layout_margin="3dp"/>

</RelativeLayout>
